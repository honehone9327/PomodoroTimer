{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-native",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@shared/*": [
        "./shared/*"
      ]
    },
    "ignoreDeprecations": "5.0",               // 追加
    "suppressImplicitAnyIndexErrors": false    // 追加
  },
  "include": [
    "src/**/*",
    "shared/**/*", 
    "./declarations.d.ts"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "extends": "expo/tsconfig.base"
}
